<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context="ru.vmsystems.vibrocalc.MainActivity">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3" android:padding="3dp" android:layout_margin="2dp"
            tools:layout_editor_absoluteY="5dp" tools:layout_editor_absoluteX="5dp">

        <LinearLayout
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_rowSpan="2"
                android:background="@color/colorFreq"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" android:layout_margin="1dp">

            <EditText
                    android:background="@color/colorWhite"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editFreqHz"
                    android:text="0.0"/>
            <TextView
                    android:text="@string/freqHz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textFreqHz" android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_rowSpan="2"
                android:background="@color/colorFreq"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" android:layout_margin="1dp">

            <EditText
                    android:background="@color/colorWhite"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editFreqCpm"
                    android:text="0.0"/>
            <TextView
                    android:text="@string/freqCpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textFreq" android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
